<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jsyoon.sleepmask2.TabFragment1"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="동작모드" />

        <Spinner
            android:id="@+id/modespinner"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/mode_arrays"
            android:prompt="@string/mode_prompt"/>

        <Button
            android:id="@+id/btn_run"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="실 행"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="음악상태" />

        <Button
            android:id="@+id/btn_songtitle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Colored" />

        <ToggleButton
            android:id="@+id/toggleButton"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ToggleButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LED" />

        <Button
            android:id="@+id/btn_ledstatus"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Alarm" />

        <Button
            android:id="@+id/btn_alarmstatus"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Colored" />

    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/button_edm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/edm" />

        <Button
            android:id="@+id/button_eeg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/eeg" />

        <Button
            android:id="@+id/button_gyro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gyro" />

        <Button
            android:id="@+id/button_ppg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ppg" />

        <Button
            android:id="@+id/button_temp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/temp" />

    </LinearLayout>

</LinearLayout>
