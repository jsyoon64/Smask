<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Checkbox category">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="setting1"
            android:title="Alarm" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="setting2"
            android:title="수면상태" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="setting3"
            android:title="블루투스상태" />

        <Preference
            android:key="btnDateFilter"
            android:summary="Reschedule using date setting"
            android:title="Reschedule" />

        <Preference
            android:key="btnTimeFilter"
            android:summary="Reschedule using time setting"
            android:title="Alarm Time" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="AlarmOnOff"
            android:title="Alarm On Off" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Checkbox category">
        <ListPreference
            android:defaultValue="red"
            android:entries="@array/color_option_labels"
            android:entryValues="@array/color_option_labels"
            android:key="color1"
            android:title="Shape Color" />
    </PreferenceCategory>

    <PreferenceCategory android:title="앱 기본정보">
        <Preference
            android:key="VersionInfo"
            android:summary="This is Version Info button"
            android:title="앱 정보" />
    </PreferenceCategory>
</PreferenceScreen>